<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Busca de Livros</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Busca de Livros</h1>
        <form action="/buscar" method="GET" class="mt-3">
            <div class="form-group">
                <label for="termo">Termo de busca:</label>
                <input type="text" id="termo" name="termo" class="form-control" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="radio" id="titulo" name="tipo" value="titulo" class="form-check-input" checked>
                    <label for="titulo" class="form-check-label">Buscar por TÃ­tulo</label>
                </div>
                <div class="form-check">
                    <input type="radio" id="ano" name="tipo" value="ano" class="form-check-input">
                    <label for="ano" class="form-check-label">Buscar por Ano</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>

        <% if (typeof mensagemErro !== 'undefined' && mensagemErro !== null) { %>
            <div class="alert alert-danger mt-3" role="alert">
                <%= mensagemErro %>
            </div>
        <% } %>

        <% if (typeof resultados !== 'undefined' && resultados.length > 0) { %>
            <h2 class="mt-5">Resultados da Busca:</h2>
            <ul class="list-group">
                <% resultados.forEach(livro => { %>
                    <li class="list-group-item"><%= livro.titulo %> - <%= livro.autor %> (<%= livro.ano %>)</li>
                <% }); %>
            </ul>
        <% } else { %>
            <h2 class="mt-5">Livros:</h2>
            <ul class="list-group">
                <% livros.forEach(livro => { %>
                    <li class="list-group-item"><%= livro.titulo %> - <%= livro.autor %> (<%= livro.ano %>)</li>
                <% }); %>
            </ul>
        <% } %>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
